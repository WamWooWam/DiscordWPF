<ListViewItem Style="{DynamicResource listViewItemStyle}" x:Name="mainWindow" x:Class="DiscordWPF.Controls.ChannelViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiscordWPF.Controls"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" PreviewMouseLeftButtonUp="ListViewItem_PreviewMouseLeftButtonUp">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <fa:ImageAwesome Foreground="{DynamicResource ForegroundBrush}" x:Name="channelIcon" Width="16" Height="16"></fa:ImageAwesome>
        <Grid x:Name="mainGrid" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock x:Name="channelName" Foreground="{DynamicResource ForegroundBrush}" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" Text="%NAME%" FontSize="12" Margin="5,0,0,0" FontWeight="SemiBold" LayoutUpdated="channelName_LayoutUpdated" />
        </Grid>
    </Grid>
</ListViewItem>